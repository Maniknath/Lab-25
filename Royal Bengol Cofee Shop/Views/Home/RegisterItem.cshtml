@model UserItem;
<style>
    form label {
        display: inline-block;
        width: 150px;
        font-weight: bold;
    }
</style>

<h2>Register Items</h2>
<br />

<form method="post" action="RegisterItem">
    <p>
        <span asp-validation-for="All"></span>
    </p>
    <label for="Name">Name: </label> <input type="text" asp-for="Name" />
    <p><label asp-for="Name"></label></p>
    <label for="Price">Price: </label> <input type="number" name="Price" /> <p></p>
    <label for="Quantity">Quantity: </label> <input type="number" asp-for="Quantity" /> <p></p>
    <label for="Description">Description: </label> <input type="text" asp-for="Description" /> <p></p>
    <p></p>

    <input type="submit" />

</form>
